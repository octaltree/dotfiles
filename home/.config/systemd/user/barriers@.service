[Unit]
Description=Barrier keyboard & mouse sharing software
After=network.target

[Service]
PassEnvironment=DISPLAY
ExecStart=/usr/bin/barriers --address %i --no-restart --no-daemon
Type=simple
ProtectHome=read-only
ProtectSystem=true
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
